<div class="index-content">
  <div class="sidebar">
    <div class="text"><%= link_to "Categories", lists_path %></div>
    <ul>
      <% @lists.each do |i| %>
        <li><%= link_to i.name %></li>
      <% end %>
    </ul>
  </div>

  <div class="category-cards">
    <div class="cards-title"><h1><strong>Music</strong></h1></div>
    <div class="cards-display">
      <% @instruments.each do |instrument|  %>
        <div class="index-card">
            <%= link_to "",classroom_category_path(instrument, @classroom_category), class: "card-link" %>
            <h2> <%= instrument.name %> </h2>
        </div>
      <% end %>
    </div>
  </div>
</div>
