              <div class="row">
                <p>Starts at: <%=@classroom.start_date %></p>
                <p>Ends at: <%=@classroom.end_date %></p>
                <p>Location: <%=@classroom.address %></p>
              </div>
              <div class="row">
                <p>Skill level: <%=@classroom.level %></p>
                <p>Language: <%=@classroom.language %></p>
                <p>Duration: <%=@classroom.time %></p>
              </div>
            </div>
          </div>
          <br>
          <div class= "row" id="btn">
          <%=link_to "Join now", "#", class: "join-button" %>
          </div>
        </div>
        <div class="col-12 col-lg-6">
          <img src="https://res.cloudinary.com/dmgja2szi/image/upload/v1661595008/sewimming_vd3o3l.jpg" alt="" class="fulmine">
