<div class="small-gray row justify-content-center">
    <div class="col-6">
      <%= simple_form_for [@list, @classroom] do |f| %>
          <%= f.input :name, class: "name-form" %>
          <%= f.input :description %>
          <%= f.input :category, collection: %w[Music Fitness Languages Hiking Gardening]%>
          <div class="row g-3">
            <div class="col">
              <%= f.input :start_date %>
            </div>
            <div class="col">
              <%= f.input :end_date %>
            </div>
          </div>
          <%= f.input :time %>
          <%= f.input :address %>
          <%= f.input :level %>
          <%= f.input :language %>
          <%= f.input :photo, as: :file, input_html: { multiple: false } %>
          <%# <%= f.input :updated_at, :order => [:day, :month, :year] %>
         <button class="form-actions w-100 rounded"> <%= f.button :submit, "Let's go!" %> </button>
      <% end %>
      <br>
    </div>
  </div>
</div>
