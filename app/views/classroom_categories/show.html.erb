<div class="index-content">
  <div class="sidebar">
    <div class="text"><%= link_to "Categories", lists_path %></div>
    <ul>
      <% @lists.each do |i| %>
        <li><%= link_to i.name %></li>
      <% end %>
    </ul>
  </div>
  <div class="category-cards">
    <div class="cards-title"><h1><strong>Music(dynamic)</strong></h1></div>
    <div class="cards-display">
      <% @classroom_categories.each do |classroom_category| %>
        <div class="index-card">
      <%= link_to "Check it out",  classroom_category_classrooms_path(classroom_category,@classroom ), class: "btn"  %>
          <h2> <%= classroom_category.name %> </h2>
        </div>
      <%end%>
    </div>
  </div>
</div>
