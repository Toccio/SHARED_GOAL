<div class="gray-container container">
  <span class="big-dot"></span>
  <span class="big-dot-right"></span>



  <div class="small-gray row justify-content-center">
    <div class="col-6">
      <%= simple_form_for @list do |f| %>
         <%= f.input :name, class: "name-form" %>
         <%= f.input :description %>
         <%= f.input :photos, as: :file, input_html: { multiple: true } %>
            <button class="gray-button form-actions w-100 rounded"> <%= f.button :submit, "Let's go!" %> </button>
      <% end %>
      <br>
    </div>
  </div>
</div>
